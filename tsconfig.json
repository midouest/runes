{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "module": "esnext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "main/*": ["src/backend/*"],
      "bridge/*": ["src/bridge/*"],
      "render/*": ["src/frontend/*"],
      "matron-wasm": ["matron/build/matron"]
    },
    "jsx": "react"
  },
  "include": ["src/**/*"]
}
